                    input(name='quote[email]', placeholder='Email*', value= ('undefined' == values.email) ? '' : values.email)
                    input(name='quote[deadline]', placeholder='Deadline', value= ('undefined' == values.deadline) ? '' : values.deadline)
                    textarea(name='quote[comment]', placeholder='Short Description*', value= ('undefined' == values.comment) ? '' : values.comment)
                    select(name='quote[budget]')
                      option(value='-none-') Budget 
                      option(value='8k-10k') 8k-10k
                      option(value='10k-25k') 10k-25k
                      option(value='25k-50k') 25k-50k
                      option(value='50k-100k') 50k-100k
                      option(value='100k') 100k+
                    select(name='quote[type]')
                      option(value='-none-') Project Type
                      option(value='motion') Motion Graphics
                      option(value='video') Video
                    input(type='submit', value='Send it!', class='send')
        .row
          .span12
            .goto-top
                a(href='#top')
                  | Top 
                  img(src='/images/arrow_up.png')

mixin blog_side(featured)
  .sidebar
    .featured.block
      h2
        | Highlights
      - for feature in featured
        .feature
          .name
            | #{feature.title}
          .star
            img(src='/images/star.png')
          .date
            - var date = new Date(feature.created); var d = date.getMonth() + '.' + date.getDate() + '.' + date.getFullYear();
            | #{d}
          .more
            a(href='/blog/#{feature.slug}') Read
            
    .tags.block.last
      h2
        | Tags
      a(href='/blog?tag=web') Web
      a(href='/blog?tag=video') Video
    

