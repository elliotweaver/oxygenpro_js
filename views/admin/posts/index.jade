extends ../layout

include ../../mixins/forms
include ../../mixins/tables
include ../../mixins/menus

block content
  h1= title
  
  mixin helpmenu_add('Post', 'posts')
  
  mixin pager(pager)
  
  table.table.table-bordered.table-striped
    mixin thead([ '', 'id', 'title', 'author', 'created' ])
    tbody
      - if (!rows.length)
        mixin tr_empty('Post', 'posts', 5)
      - else
        each row in rows
          mixin tr_op( [ 'op', row._id, row.title, row.author, row.created ], row, 'posts' )
              
  mixin pager(pager)
