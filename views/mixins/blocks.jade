include forms

mixin header(type)
  #header.white-wash
    .container
      .row
        .span12
          .inside
            .logo
              a(href='/')
                img(src='/images/logo.png')
            .info.t-grey-light
              span.phone
                | Phone: 866.894.6747
              span.login
                img(src='/images/lock.png')
                a(href='/login', class='t-grey-light') Log in
            .menu
              ul
                - if (type == 'home')
                  li.first
                    a(href='/', class='active') Home
                - else
                  li.first
                    a(href='/') Home
                - if (type == 'work')
                  li
                    a(href='/work', class='active') Work
                - else
                  li
                    a(href='/work') Work
                - if (type == 'about')
                  li
                    a(href='/about', class='active') About
                - else
                  li
                    a(href='/about') About
                - if (type == 'blog')
                  li
                    a(href='/blog', class='active') Blog
                - else
                  li
                    a(href='/blog') Blog
                li.last
                  a(href='/#quote') Free Quote
mixin flash()
  #flash.white-wash
    .container
      .row
        .span12
          .inside
            
            // alert
            - if (sess.flash.error.length)
              div.alert.alert-error
                h3
                  | Errors
                ul
                  for alert in sess.flash.error
                    li #{alert}
                      
            // success
            - if (sess.flash.success.length)
              div.alert.alert-success
                h3
                  | Success
                ul
                  for success in sess.flash.success
                    li #{success}
              
            // warning
            - if (sess.flash.warning.length)
              div.alert
                h3
                  | Warning
                ul
                  for warning in sess.flash.warning
                    li #{warning}
                    
            // info
            - if (sess.flash.info.length)
              div.alert.alert-info
                h3
                  | Info
                ul
                  for info in sess.flash.info
                    li #{info}

