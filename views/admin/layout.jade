!!!
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
    link(rel='stylesheet', href='/stylesheets/style-admin.css')
    script(type='text/javascript', src='/libs/ckeditor/ckeditor.js')
  body
    
    // header
    #header
      .container
        .row
          .span12
            .inside
              ul
                li
                  a(href='/') Home
                li
                  a(href='/admin/users') Users
                li
                  a(href='/admin/projects') Projects
                li
                  a(href='/admin/cases') Cases
                li
                  a(href='/admin/posts') Posts
                li
                  a(href='/logout') Logout
    
    #flash
      .container
        .row
          .span12
            .inside
              
              // alert
              - if (sess.flash.error.length)
                div.alert.alert-error
                  h3
                    | Errors
                  ul
                    for alert in sess.flash.error
                      li #{alert}
                      
              // success
              - if (sess.flash.success.length)
                div.alert.alert-success
                  h3
                    | Success
                  ul
                    for success in sess.flash.success
                      li #{success}
              
              // warning
              - if (sess.flash.warning.length)
                div.alert
                  h3
                    | Warning
                  ul
                    for warning in sess.flash.warning
                      li #{warning}
                      
              // info
              - if (sess.flash.info.length)
                div.alert.alert-info
                  h3
                    | Info
                  ul
                    for info in sess.flash.info
                      li #{info}

    
    // content
    #content
      .container
        .row
          .span12
            .inside
              block content
            

    // footer
    #footer
      .container
        .row
          .span12
            .inside
            
